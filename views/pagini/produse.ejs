<!DOCTYPE html>
<html lang="ro">

<head>
    <title>Dezvoltare Aplicații ManolovSky</title>
    <meta name="keywords"
        content="ManolovSky, aplicații mobile, cumpără aplicații, dezvoltare aplicații, app development, android, ios, web, programare">
    <meta name="description"
        content="Crează-ți propria aplicație pentru a crește vizibilitatea companiei tale. ManolovSky te ajută să realizezi o nouă aplicație sau să-ți transformi website-ul într-o aplicație pentru mobil.">
    <%- include("../fragmente/head.ejs") %>
        <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons/font/bootstrap-icons.css" rel="stylesheet">
        <link rel="stylesheet" href="/resurse/css/customizare_butoane.css" type="text/css" />
        <script type="text/javascript" src=/resurse/js/produse.js></script>

</head>

<body class="fixed-background">
    <%- include("../fragmente/header.ejs"); %>
        <link href="/resurse/css/produse.css" type="text/css" rel="stylesheet" />
        <main>
            <div class="container mt-4">
                <div class="row g-3">
                    <!-- Input Nume -->
                    <div class="col-12 col-md-6">
                        <label for="inp-nume" class="form-label">Nume:</label>
                        <input type="text" id="inp-nume" class="form-control">
                    </div>

                    <!-- Textarea cu Floating Label -->
                    <div class="col-12 col-md-6">
                        <div class="form-floating">
                            <textarea class="form-control" id="inp-descriere" placeholder="Introduceți textul aici"
                                style="height: 100px;"></textarea>
                            <label for="inp-descriere">Descriere:</label>
                        </div>
                        <div id="validationMessage" class="text-danger mt-2"></div>
                    </div>


                    <!-- Durată de realizare -->
                    <div class="col-12 col-md-6">
                        <p>Durată de realizare:</p>
                        <div class="btn-group btn-group-toggle d-flex" data-bs-toggle="buttons">
                            <input type="radio" class="btn-check" name="gr_rad" id="i_rad1" value="0:4"
                                autocomplete="off">
                            <label class="btn btn-outline-primary flex-fill" for="i_rad1">Mică (Durată &lt; 4)</label>

                            <input type="radio" class="btn-check" name="gr_rad" id="i_rad2" value="4:6"
                                autocomplete="off">
                            <label class="btn btn-outline-secondary flex-fill" for="i_rad2">Medie (4 &le; Durată &lt;
                                6)</label>

                            <input type="radio" class="btn-check" name="gr_rad" id="i_rad3" value="6:1000000000"
                                autocomplete="off">
                            <label class="btn btn-outline-success flex-fill" for="i_rad3">Mare (6 &le; Durată)</label>

                            <input type="radio" class="btn-check" name="gr_rad" id="i_rad4" value="toate" checked
                                autocomplete="off">
                            <label class="btn btn-outline-danger flex-fill" for="i_rad4">Toate</label>
                        </div>
                    </div>

                    <!-- Tipuri produse -->
                    <div class="col-12 col-md-6">
                        <p>Tipuri produse:</p>
                        <div class="btn-group btn-group-toggle d-flex" data-bs-toggle="buttons">
                            <input type="radio" class="btn-check" name="gr_rad2" id="i_rad5" value="comerciale"
                                autocomplete="off">
                            <label class="btn btn-outline-info flex-fill" for="i_rad5">Comerciale</label>

                            <input type="radio" class="btn-check" name="gr_rad2" id="i_rad6" value="educative"
                                autocomplete="off">
                            <label class="btn btn-outline-warning flex-fill" for="i_rad6">Educative</label>

                            <input type="radio" class="btn-check" name="gr_rad2" id="i_rad7" value="divertisment"
                                autocomplete="off">
                            <label class="btn btn-outline-dark flex-fill" for="i_rad7">Divertisment</label>

                            <input type="radio" class="btn-check" name="gr_rad2" id="i_rad8" value="toate" checked
                                autocomplete="off">
                            <label class="btn btn-outline-primary flex-fill" for="i_rad8">Toate</label>
                        </div>
                    </div>

                    <!-- Pret minim -->
                    <div class="col-12 col-md-6">
                        <label for="inp-pret" class="form-label">Pret minim:</label>
                        <input type="range" id="inp-pret" class="form-range" value="0" min="1000" max="8000">
                        <span id="infoRange">(0)</span>
                    </div>

                    <!-- Select simplu -->
                    <div class="col-12 col-md-6">
                        <label for="inp-categorie" class="form-label">Select simplu:</label>
                        <select id="inp-categorie" class="form-select">
                            <option id="sel-toate" selected value="toate">toate</option>
                            <!-- Opțiuni adăugate dinamic -->
                            <% for (let opt of locals.optiuni) { %>
                                <option value="<%- opt.unnest %>"><%- opt.unnest %></option>
                                <% } %>
                        </select>
                    </div>

                    <!-- Container pentru butoane -->
                    <div class="col-12">
                        <div
                            class="btn-container d-flex flex-column flex-md-row justify-content-center gap-3 flex-wrap">
                            <button id="filtrare" class="btn btn-primary btn-custom">
                                <i class="bi bi-funnel-fill"></i> <span class="d-none d-sm-inline">Filtrează</span>
                            </button>
                            <button id="resetare" class="btn btn-secondary btn-custom">
                                <i class="bi bi-arrow-clockwise"></i> <span class="d-none d-sm-inline">Resetează</span>
                            </button>
                            <button id="sortCrescNume" class="btn btn-success btn-custom">
                                <i class="bi bi-sort-alpha-down"></i> <span class="d-none d-sm-inline">Sortează
                                    crescător după preț și nume</span>
                            </button>
                            <button id="sortDescrescNume" class="btn btn-danger btn-custom">
                                <i class="bi bi-sort-alpha-up-alt"></i> <span class="d-none d-sm-inline">Sortează
                                    descrescător după preț și nume</span>
                            </button>
                        </div>
                    </div>
                </div>
            </div>

            <p style="padding-top: 20px;" id="p-suma">Apăsați Alt+"c" pentru suma preturilor produselor afișate. </p>
            <section id="produse">
                <h2>Produse</h2>
                <div class="grid-produse">
                    <% for( let prod of locals.produse) { %>
                        <article class="produs">
                            <h3 class="nume">Nume: <a href="/produs/<%-prod.id %>"><span class="val-nume"><%-
                                            prod.nume%></span></a></h3>
                            <div class="info-prod">
                                <p class="pret">Preț: <span class="val-pret"><%- prod.pret%></span></p>
                                <p class="realizare">Durată realizare: <span class="val-realizare"><%-
                                            prod.durata_creare%></span></p>
                                <p class="pagini">Pagini: <span class="val-pagini"><%- prod.pagini%></span></p>
                            </div>
                            <p class="categorie">Categorie: <span class="val-categorie"><%- prod.categorie%></span></p>
                            <p class="tip">Tip produs: <span class="val-tip"><%- prod.tip_produs%></span></p>
                            <figure>
                                <a href="/produs/<%-prod.id %>"><img src="/resurse/imagini/produse/<%- prod.imagine %>"
                                        style="width:50%;height:auto;" alt="[imagine <%- prod.nume %>]" /></a>
                            </figure>
                            <div>
                                <p class="descriere">Descriere: <span class="val-descriere"><%- prod.descriere%></span>
                                </p>
                            </div>
                            <label class="selecteaza-cos">
                                Selectează:<br />
                                <input type="checkbox" class="select-cos" value="<%-prod.id %>" autocomplete="off">
                            </label>
                        </article>
                        <% }%>
                </div>
            </section>
        </main>

        <%- include("../fragmente/footer") %>
</body>

</html>